<header>
    <nav
        class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark box-shadow gap-20 mb-3 custom-navbar padding-15">
        <div class="container-fluid gap-20">
            <img src="../images/bookshelf.png" class="navbar-icon" alt="test">
            <a class="navbar-brand font-bold" asp-area="" asp-controller="Home" asp-action="Index">NovelNest</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item">
                        <a class="nav-link text-white profileBtn" asp-area="" asp-controller="Home" asp-action="Index">Explore Books</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="PublishABook">Publish a Book</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link text-white surprise-me-button" asp-area="" asp-controller="Home" asp-action="SurpriseMe">Surprise Me!</a>
                    </li>
                </ul>
            </div>
            <div class="dropdown">
                <div class="text-white d-flex align-items-center gap-20">
                    @if (!string.IsNullOrEmpty(ViewBag.ProfilePicture))
                    {
                        <a class="text-white text-decoration-none" asp-area="" asp-controller="Home" asp-action="MyProfile">
                            <img src="@ViewBag.ProfilePicture" class="profile-picture rounded-circle">
                        </a>
                    }
                    else
                    {
                        <a class="text-white text-decoration-none" asp-area="" asp-controller="Home" asp-action="MyProfile">
                            <img src="/images/user.png" width="30" height="30"
                                class="profile-picture rounded-circle">
                        </a>
                    }

                    @if (ViewBag.Username != null)
                    {

                        <p class="m-auto">@ViewBag.Username</p>
                    }
                    else
                    {
                        <p class="m-auto">Username</p>
                    }

                    <a asp-area="" asp-controller="Home" asp-action="Logout">
                        <img src="/images/red-logout.png" class="logout-icon m-auto" alt="Log Out Button">
                    </a>
                </div>
            </div>
        </div>
    </nav>
</header>

